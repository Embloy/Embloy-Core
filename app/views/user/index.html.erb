<h1>Your Profile</h1>Logged in as: <%= @user.email %><br>
<div class="container card mt-5">
  <div class="row">
    <div class="col-4">
      <% if @user %>
        <%= image_tag @user.image_url, style: "width: 200px; height: 200px; border-radius:100%", class: "card-img-top" %>
        </div>
        <div class="col-8">
          <h1><%= @user.first_name %> <%= @user.last_name %></h1>
          <h6><%= pluralize(@user.jobs.size, "job") %> | <%= pluralize(@user.reviews.size, "review") %> | <%= pluralize(@total_job_views, "total job view") %></h6>
<!--          | <%#= pluralize(@user.view_count, "profile view") %>-->

        </div>
        <div class="d-flex justify-content-end pt-3">
          <%= link_to 'Your jobs', own_jobs_path, method: :get, class: "btn btn-dark btn-lg mr-1" %>
          <%= link_to 'Your applications', own_applications_path, method: :get, class: "btn btn-dark btn-lg mr-1" %>
          <%= link_to 'Edit Password', edit_password_path, method: :get, class: "btn btn-light btn-lg mr-1" %>
          <%= button_to 'Logout', logout_path, method: :delete, class: "btn btn-light btn-lg mr-1" %>
          <%= link_to 'Settings', profile_settings_path, method: :get, class: "btn btn-warning btn-lg ms-2" %>
        </div>
      <% else %>
        <%= link_to 'Sign Up', sign_up_path %>
        or
        <%= link_to 'Login', sign_in_path %>
      <% end %>
      </div>
</div>

