<section id="hero" class="hero d-flex align-items-center">

  <div class="container">
    <h2>Your Jobs</h2>
    <% if !@jobs.nil? %>
      <h3>You have created <%= @jobs.count %> jobs! - <%= link_to "Create new job", new_job_path %></h3>
    <% else %>
      <h3>You have not created any jobs yet! - <%= link_to "Create new job here!", new_job_path %></h3>
    <% end %>

  </div>
</section>

<!-- Section-->
<!-- ======= Breadcrumbs ======= -->
<div class="breadcrumbs">
  <nav>
    <div class="container">
      <ol>
        <li><a href="<%= root_path %>">Home</a></li>
        <li><a href="<%= profile_index_path %>">My Profile</a></li>
        <li>My Jobs</li>
      </ol>
    </div>
  </nav>
</div><!-- End Breadcrumbs -->


<!-- Section-->
<div class="container px-3 px-lg-5 mt-5 text-dark">
  <div class="row gx-3 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-3 justify-content-center ">
    <% @jobs.each do |job| %>
      <% if job.public? %>
        <%= render "jobs/own_posting", job: job %>
      <% end %>
    <% end %>
  </div>
</div>


<a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
