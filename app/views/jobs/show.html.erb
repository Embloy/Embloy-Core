            <!-- Post content-->
            <section class="mb-5">
              <h4 class="fw-bolder mb-4 mt-5"> Position: <%= @job.position %></h4>
              <h4 class="fw-bolder mb-4 mt-5"> Starts: <%= @job.start_slot.ctime %></h4>
              <h4 class="fw-bolder mb-4 mt-5"> Description:</h4>
              <p class="fs-5 mb-4"><%= @job.description %></p>
