<main id="main">
  <%= form_with model: @job do |form| %>

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
      <div class="page-header d-flex align-items-center" style="background-image: url('assets/img/page-header.jpg');">
        <div class="container position-relative">
          <div class="row d-flex justify-content-center">
            <div class="col-lg-6 text-center">
              <h2><%= form.text_field :title, placeholder: "Your job title", class: "form-control", required: true %></h2>

              <div><%= form.label :job_type %>
                <br><%= form.select :job_type, @categories_list, placeholder: "Job Categories", class: "form-select form-select-lg mb-3" %>
              </div>


              <div class="mt-3">
                <%= form.datetime_field :start_slot, class: "datetime form-control", required: true %><br>
              </div>
            </div>

          </div>
        </div>
      </div>
      <nav>
        <div class="container">
          <ol>
            <li><a href="<%= root_path %>">Home</a></li>
            <li><a href="<%= jobs_path %>">Jobs</a></li>
            <li>New Job</li>
          </ol>
        </div>
      </nav>
    </div><!-- End Breadcrumbs -->

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container" data-aos="fade-up">

        <div>
          <iframe style="border:0; width: 100%; height: 340px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
        </div><!-- End Google Maps -->

        <div class="row gy-4 mt-4">

          <div class="col-lg-4">

            <div class="info-item d-flex">
              <i class="bi bi-geo-alt flex-shrink-0"></i>
              <div>
                <h4>Location:</h4>
                <p>A108 Adam Street, New York, NY 535022</p>
              </div>
            </div><!-- End Info Item -->

            <div class="info-item d-flex">
              <i class="bi bi-envelope flex-shrink-0"></i>
              <div>
                <h4>Email:</h4>
                <p><%= Current.user.email %></p>
              </div>
            </div><!-- End Info Item -->

            <div class="info-item d-flex">
              <i class="bi bi-person flex-shrink-0"></i>
              <div>
                <h4>Your Name:</h4>
                <p><%= Current.user.full_name %></p>
              </div>
            </div><!-- End Info Item -->

          </div>

          <div class="col-lg-8">
            <form action="forms/contact.php" method="post" role="form" class="php-email-form">
              <div class="row">
                <div class="col-md-6 form-group">
                  <%= form.text_field :position, class: "form-control", placeholder: "Job position", required: true %>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <%= form.text_field :key_skills, class: "form-control", placeholder: "Required skills", required: true %>
                </div>
              </div>
              <div class="form-group mt-3">
                <%= form.text_field :duration, placeholder: "Duration in days", required: true %>
                <%= form.text_field :salary, placeholder: "Salary", required: true %>
                <%= form.text_field :currency, placeholder: "Currency", required: true %>
              </div>
              <div class="form-group mt-3">
                <p><%= form.text_area :description, rows: 5, placeholder: "Write your job description here.", class: "form-control", required: true %>
              </div>
            </form>
          </div><!-- End Contact Form -->
          <div>
            <%= form.label :status %><br>
            <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
          </div>
          <div>
            <%= form.label :longitude %><br>
            <%= form.number_field :longitude, required: true %><br>
            <%= form.label :latitude %><br>
            <%= form.number_field :latitude, required: true %><br>
          </div>
          <%= form.submit %>
        </div>
        <%= form.label "Do you want to receive a notification when a new application is submitted?" %>
        <%= form.check_box :job_notifications %><br>
      </div>
    </section><!-- End Contact Section -->
    <div>
    </div>
  <% end %>

</main><!-- End #main -->

<a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
<div id="preloader"></div>
