<div class="col mb-5" data-aos="fade-up">
  <div class="card h-100">
    <!-- Job image-->
    <!--    <img class="card-img-top" src="app/views/jobs/joblogo.png"/>-->
    <!-- Job details-->
    <div class="card-body p-4 ">
      <div class="text-center ">
        <!-- Title-->
        <h5 class="fw-bolder"><%= job.title %></h5>
        <!-- Salary-->
        <%= "#{job.salary} #{job.currency}" %>
          <!-- Description-->
          <p class="card-text"><%= job.description %></p>
          <div class="d-flex justify-content-between align-items-center">
            <!-- Start slot-->
            <small class="text-muted  "><%= job.start_slot.getlocal.asctime %></small>
          </div>
      </div>
    </div>
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center">
        <a href="<%= new_job_application_path(job) %>" class="readmore stretched-link">
          <span>view</span>
          <i class="bi bi-arrow-right"></i></a>
      </div>
    </div>
  </div>
</div>


