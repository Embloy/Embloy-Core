<div class="breadcrumbs">
  <nav>
    <div class="container">
      <ol>
        <li><a href="<%= root_path %>">Home</a></li>
        <li>All available jobs</li>
      </ol>
    </div>
  </nav>
</div><!-- End Breadcrumbs -->

<section class="py-5 bg-dark bg-feed">
  <div class="container px-3 px-lg-5 mt-5 ">
    <!--  <div class="container px-3 px-lg-5 mt-5 .bg-dark.bg-gradient">-->
