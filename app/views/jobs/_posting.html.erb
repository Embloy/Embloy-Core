<div class="container-fluid px-sm-1 py-1 mx-auto">
  <style>
      body {
          background-color: #6200EA;
          color: #000;
          overflow-x: hidden;
      }

      .card {
          margin: auto;
          padding: 20px;
          border-radius: 15px;
          margin-top: 50px;
          margin-bottom: 50px;
      }

      .like {
          color: #757575;
          font-weight: bold;
          background-color: #EEEEEE;
          padding: 7px;
          border-radius: 50%;
      }

      .like-checked {
          color: #E53935;
      }

      .like:hover {
          color: #E53935;
          cursor: pointer;
      }

      .pic1 {
          width: 90%;
          margin-left: auto;
          margin-right: auto;
          display: block;
      }

      .product-pic {
          padding-left: auto;
          padding-right: auto;
          width: 100%;
      }

      .card-1 {
          padding: 30px 30px 20px 30px !important;
          border: none;
          width: 375px;
      }

      .category {
          padding-top: 25px;
          color: grey;
      }

      .product-name {
          padding-bottom: 15px;
          font-family: Florence;
          font-weight: bold;
      }

      .price {
          font-size: 18px;
      }

      .sm-text {
          font-size: 14px;
      }

      .fa-star {
          color: #FF6F00;
          cursor: pointer;
      }

      .fa-star-o {
          color: #FF6F00;
          cursor: pointer;
      }
  </style>


  <div class="row justify-content-center">
    <div class="d-flex">
      <div class="card card-1">
        <div class="text-center stretched-link px-1">
          <small class="text-muted"><%= job.start_slot.getlocal.asctime %></small>
          <h5 class="card-title"><%= job.title %></h5>
        </div>
        <div class="pr-3 row justify-content-end">
        </div>
        <div class="product-pic">
          <img class="pic1" src="<%= job.image_url.nil? ? "https://picsum.photos/200/300?random=#{job.job_id}" : job.image_url %>" alt="">
        </div>
        <div class="row px-1 justify-content-between">
          <small class="category"><%= job.job_type %></small>
          <h5 class="product-name"><%= job.position %></h5>
          <p class="price"><%= job.salary %> <span class="sm-text"><%= job.currency %></span></p>
          <div class="stars">
            <span class="fa fa-star star-active"></span>
            <span class="fa fa-star star-active"></span>
            <span class="fa fa-star star-active"></span>
            <span class="fa fa-star-o"></span>
            <span class="fa fa-star-o"></span>
          </div>
        </div>
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
          <div class="text-center">
            <a href="<%= job_path(job) %>" class="readmore">
              <span>apply</span>
              <i class="bi bi-arrow-right stretched-link"></i></a>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

