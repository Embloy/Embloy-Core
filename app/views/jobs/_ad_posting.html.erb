<!--                  (adsbygoogle = window.adsbygoogle || []).push({});-->
<!--              </script>-->
              <div style="background-color: #f5f5f5; border: 1px solid #ccc; padding: 5px;">
                <div style="font-size: 14px; font-weight: bold; margin-bottom: 5px;">Advertisement</div>
                <div style="text-align: center;">
                  <img src="https://via.placeholder.com/300x250" alt="Ad Placeholder" style="max-width: 100%; height: auto;">
                </div>
