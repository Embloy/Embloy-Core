                <span data-purecounter-start="0" data-purecounter-end=<%= CompanyUser.count %> data-purecounter-duration="1" class="purecounter"></span>
                <p>Companies</p>
              </div>
            </div><!-- End Stats Item -->

          </div>
        </div>

        <div class="col-lg-5 order-1 order-lg-2 hero-img" data-aos="zoom-out">
          <!--<img src="assets/img/hero-logo-img.png" class="img-fluid mb-3 mb-lg-0" alt="">-->
        </div>

