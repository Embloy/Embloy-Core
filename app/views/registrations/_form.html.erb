<!--<section class="vh-100 bg-light">-->
<%= form_with model: @user, class: "was-validated", url: sign_up_path do |f| %>
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form class="mx-1 mx-md-4">

                  <div class="d-flex flex-row align-items-center mb-4">
<!--                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>-->
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :first_name, type: "text", class: "form-control is-valid", id: 'validationServer01', placeholder: "First name", required: true %>
                      <label class="form-label" for="form3Example1c">First Name</label>
                    </div>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :last_name, type: "text", class: "form-control is-valid", id: 'validationServer01', placeholder: "Last name", required: true %>
                      <label class="form-label" for="form3Example1c">Last Name</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
<!--                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>-->
                    <div class="form-outline flex-fill mb-0">
                      <%= f.email_field :email, type: "email", class: "form-control form-control-lg", id: 'validationServer08', placeholder: "Email", required: true %>
                      <label class="form-label" for="form3Example3c">Your Email</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
<!--                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>-->
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password, type: "password", class: "form-control form-control-lg", id: 'inputPassword', placeholder: "*************", required: true, minlength: 8 %>
                      <label class="form-label" for="form3Example4c">Password</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
<!--                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>-->
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password_confirmation, type: "password", class: "form-control form-control-lg", id: 'inputPassword_repeat', placeholder: "*************", required: true, minlength: 8, oninput: "check()" %>
                      <label class="form-label" for="form3Example4cd">Repeat your password</label>
                    </div>
                  </div>

                  <script>
                      function check() {
                          var input = document.getElementById('inputPassword_repeat');
                          if (input.value !== document.getElementById('inputPassword').value) {
                              input.setCustomValidity('Password must be matching.');
                          } else {
                              // input is valid -- reset the error message
                              input.setCustomValidity('');
                          }
                      }</script>


                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <div class="form-outline flex-fill mb-0">
                      <input class="form-check-input is-invalid" type="checkbox" value="" id="validCheck" required>
                      <label class="form-check-label" for="validCheck">
                        I agree to the <%= link_to 'terms and conditions', privacy_policy_path %>
                      </label>
                      <div>
                        <small id="invalid-feedback" class="text-muted">
                          You must agree before submitting.
                        </small>
                      </div>
                    </div>
                  </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <p>
                      <% f.label 'longitude' %><br>
                      <% f.number_field :longitude, default: 0.0 %>
                    </p>
                    <p>
                      <% f.label 'latitude' %><br>
                      <% f.number_field :latitude, default: 0.0 %>
                    </p>

                    <label class="form-check-label" for="validCheck">
                      Do you want to receive e-mail notifications for your applications?
                    </label>
                    <%= f.check_box :application_notifications %>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%#= f.submit 'Register', type: "button", class: "btn btn-primary btn-lg" %>
                    <div class="col-12">
<!--                      <button class="btn btn-primary w-100" type="submit">Create Account</button>-->
                      <%= f.submit 'Register', class: "btn btn-primary w-100" %>
                    </div>

                  </div>
                  <p class="text-center text-muted mt-5 mb-0">Already have an account?
                    <u>    <%= link_to "Login here", log_in_path, class: "fw-bold text-body" %></u>
                  </p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
<div id="preloader"></div>


